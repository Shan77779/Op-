-- Tab for Teleportation Scripts (Teleport to Random Location)
local teleportTab = Window:MakeTab({
    Name = "Teleportation üìç",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Add Teleport to Random Location Button in Teleportation Tab
teleportTab:AddButton({
    Name = "üìç TELEPORT TO RANDOM LOCATION",
    Callback = function()
        local randomX = math.random(-100, 100)
        local randomY = math.random(10, 50)
        local randomZ = math.random(-100, 100)
        
        game.Players.LocalPlayer.Character:SetPrimaryPartCFrame(CFrame.new(randomX, randomY, randomZ))
        print("TELEPORTING TO RANDOM LOCATION üìç")
    end    
})

