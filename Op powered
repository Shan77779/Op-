    Name = "ğŸ® FPS Unlocker",
    Default = false,
    Callback = function(state)
        if state then
            setfpscap(1000)
        else
            setfpscap(60)
        end
    end
})

utilityTab:AddToggle({
    Name = "ğŸŒ«ï¸ Lighting Reducer",
    Default = false,
    Callback = function(state)
